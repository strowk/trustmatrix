<?import javafx.geometry.Insets?>
<?import javafx.scene.canvas.Canvas?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.VBox?>
<BorderPane fx:id="grid" fx:controller="com.trustmatrix.Controller" xmlns:fx="http://javafx.com/fxml">
    <center>
        <Canvas fx:id="img" height="400.0" width="600.0"/>
    </center>
    <padding>
        <Insets top="25" right="25" bottom="10" left="25"/>
    </padding>
    <right>
        <VBox>
            <ListView fx:id="listBoxForInitialDistribution"/>
            <Button fx:id="resetButton" text="reset"/>
            <TextField fx:id="distortion" text="0.5"/>
            <TextField fx:id="speed"/>
        </VBox>
    </right>
</BorderPane>